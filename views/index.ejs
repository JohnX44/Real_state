  <title>Aruna Residence</title>
</head>
<body>
  <!-- Inject Navbar Partial -->
  <%- include('partials/navbar') %>

  <!-- views/index.ejs -->
<main class="container text-center mt-5 fade" >
    <h1 class="main-heading">Guiding your path to a new home in Indonesia</h1>
    <p class="sub-text">With expert guidance and a deep understanding of Indonesia's real estate landscape, we make your journey to a new home seamless and stress-free.</p>
  
    <!-- Image Section -->
    <div class="image-section">
      <img src="/images/Heroimg1.svg" alt="Modern House" class="img-fluid">
    </div>
  
    <!-- Search Bar Section (Positioned below image on mobile) -->
    <div class="search-bar">
      <input type="text" placeholder="What to look for?" class="form-control mb-2" />
      <select class="form-select mb-2">
        <option>Property Type</option>
      </select>
      <select class="form-select mb-2">
        <option>Price</option>
      </select>
      <select class="form-select mb-2">
        <option>All Cities</option>
      </select>
      <button class="btn btn-dark">Search</button>
    </div>
  </main>
  <%- include('partials/aruna-section') %>


  <!-- Inject Footer Partial -->
  <%- include('partials/property-listings.ejs') %>

  <%- include('partials/contact-form') %>

  <%- include('partials/faq') %>

  <%- include('partials/footer') %>

  <script src="/js/script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
